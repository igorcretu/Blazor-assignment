@page "/User"
@inject HttpClient Http;

<PageTitle>Users</PageTitle>

<h1>Users:</h1>

@if (users == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private Users[]? users;
    private string msg = "";
    
    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            users = await Http.GetFromJsonAsync<Users[]>("/User");
        } catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }

    public class Users
    {
        public int? Id { get; set; }
        public string? Username { get; set; }
        public string? Email { get; set; }
        public string? Role { get; set; }
    }

}